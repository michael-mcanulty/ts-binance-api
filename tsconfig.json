{
  "compilerOptions": {
    "lib": [
      "es2016",
      "es2016.array.include",
      "dom"
    ],
    "sourceMap": true,
    "inlineSources": true,

    "outDir": "dist",
    "baseUrl": "src",
    "module": "commonjs",
    "target": "es2016",
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules"
  ]
}

